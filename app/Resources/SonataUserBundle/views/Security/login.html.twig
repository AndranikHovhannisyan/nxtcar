{% extends 'nxtcarMainBundle::layout.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset("bundles/nxtcaruser/css/login.css") }}">
{% endblock %}

{% block content %}
    
    <div class="login-content">
        <div class="lod-in-page lod-in">
            <div class="div-login">Login</div>
            <div class="div-f-btn">
                <a href="#"class="f-btn btn btn-primary btn-lg " role="button">Connect with Facebook</a>
            </div>
            <hr>
            <div class="div-or">or</div>
            <div class="form">

                {# TODO ned to change style and may be position #}
                <span>{{ error }}</span>

                <form class="form-horizontal1" role="form1" action="{{ path("fos_user_security_check") }}" method="post">
                    <input type="text" class="form-mail" id="" name="_username" placeholder="Email"><br>
                    <input type="password" class="form-password" id="" name="_password" placeholder="Password">
                    <div class="forgotten-password"><a href=""> I've forgotten my password</a></div>
                    <div class="checkbox">
                        <input type="checkbox" class="form-checkbox">
                        <label >Remember me</label>
                    </div>
                    <div class="col-sm-10">
                        <input type="submit" class="submit btn btn-default" value="Log in">
                    </div><br><br>
                    <hr><br>
                    <h6><b>Not a member yet? </b></h6>
                    <div class="forgotten-password"><a href="">Sign-up in 30 seconds</a></div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}