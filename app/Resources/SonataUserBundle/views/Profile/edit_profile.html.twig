{% extends 'nxtcarMainBundle:Dashboard:profileBase.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset("bundles/nxtcaruser/css/profile_edit.css") }}">
{% endblock %}

{% block content %}

    {{ parent() }}


    <div class="col-xs-12 col-md-9">
        <div>
            <h3 class="user-profil-header"> Your personal information</h3>
        </div>
        <div class="user-profil-content">
            <form class="form-horizontal" role="form" action="{{ path('sonata_user_profile_edit') }}" method="POST">

                <div class="form-group">
                    <div class="col-sm-12">
                        <div class="row">
                            <div class="col-sm-3 text-right">
                                <label for="gender" class="col-sm-3 control-label">Gender</label>
                            </div>
                            <div class="col-sm-3">
                                {{ form_widget(form.gender, {'attr': {'class': "form-control", 'id': "gender"} }) }}
                            </div>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label for="inputFirstname" class="col-sm-3 control-label">First name</label>
                    <div class="col-sm-3">
                        {{ form_widget(form.firstname, {'attr': {'class': "form-control", 'id': "inputFirstname", 'placeholder': "First name"} }) }}
                    </div>
                </div>

                <div class="form-group">
                    <label for="inputLastname" class="col-sm-3 control-label">Last name</label>
                    <div class="col-sm-3">
                        {{ form_widget(form.lastname, {'attr': {'class': "form-control", 'id': "inputLastname", 'placeholder': "Last name"} }) }}
                    </div>
                </div>

                <div class="form-group">
                    <label for="selectDisplayed" class="col-sm-3 control-label">Displayed As</label>
                    <div class="col-sm-3">
                        {{ form_widget(form.displayedAs, {'attr': {'class': "form-control", 'id': "selectDisplayed"} }) }}
                    </div>
                </div><br><br>

                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-3 control-label">Email</label>
                    <div class="col-sm-6">
                        {{ form_widget(form.email, {'attr': {'class': "form-control", 'id': "inputEmail3", 'placeholder': "Email"} }) }}
                    </div>
                </div>

                <div class="form-group">
                    <label for="locale" class="col-sm-3 control-label">Mobile phone</label>
                    <div class="col-sm-3">
                        {{ form_widget(form.locale, {'attr': {'class': "form-control", 'id': "locale"} }) }}
                    </div>
                    <div class="col-sm-3">
                        {{ form_widget(form.phone, {'attr': {'class': "form-control"} }) }}
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <div class="checkbox  form-checkbox">
                            <label class="">
                                {{ form_widget(form.showPhoneNumber) }}{{ form_label(form.showPhoneNumber) }}
                            </label>
                        </div>
                    </div>
                </div><br><br>
                <div class="form-group">
                    <label for="yearOfBirth" class="col-sm-3 control-label">Birth year</label>
                    <div class="col-sm-3">
                        {{ form_widget(form.yearOfBirth, {'attr': {'class': 'form-control', 'id': 'yearOfBirth'} }) }}
                    </div>
                </div>
                <div class="form-group">
                    <label for="selectDisplayed2" class="col-sm-3 control-label">Mini bio</label>
                    <div class="col-sm-9">
                        <div class="row">

                            <div class="col-sm-7">
                                {{ form_widget(form.biography, {'attr': {'class': 'form-control', 'rows': '4'} }) }}
                            </div>

                            <div class="col-sm-4 form-text">Tell the community a bit about yourself, so planning a car share together will be easy. For example: "I'm a student at Bristol Uni, and I often visit friends in London. I love photography."</div>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-offset-3 col-sm-10">
                        <input type="submit" class="submit btn btn-default" value="Save">
                    </div>
                </div>
                {{ form_widget(form._token) }}
            </form>
        </div>
    </div>

{% endblock %}