{% extends 'nxtcarMainBundle:Dashboard:profileBase.html.twig' %}

{% block content %}
    <div class="row">
        <div class="col-xs-12 col-md-3">
            {{ parent() }}
        </div>
        <div class="col-xs-12 col-md-8">
            <form class="form-horizontal" role="form" action="#" method="POST">
                {{ form_widget(form.carBrand) }}
                {{ form_widget(form.model) }}
                {{ form_widget(form.comfort) }}
                {{ form_widget(form.numberOfSets) }}
                {{ form_widget(form.color) }}
                {{ form_widget(form.type) }}

                <div class="form-group">
                    <div class="col-sm-offset-3 col-sm-10">
                        <input type="submit" class="submit btn btn-default" value="Save">
                    </div>
                </div>

                {{ form_widget(form._token) }}
            </form>
        </div>
    </div>

{% endblock %}