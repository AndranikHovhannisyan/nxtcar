{% extends "nxtcarMainBundle::layout.html.twig" %}

{% block AngularController %}ng-controller="MainController"{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset("bundles/nxtcarmain/css/main_content.css") }}">
{% endblock %}

{% block bottomHeader %}
    <div class="background">
        <span class="lenta-before"></span>
        <div class="lenta">Connecting piople who need to travel with drivers who have empty seats</div>
        <span class="lenta-after" ></span>
        <span class="lenta-after1" ></span>
        <br>
        <h1 >Find a ride</h1>
        <p>Choose from thousands of rides offered by drivers across the UK, averydey.</p>
        <!-- form -->
        <form class="form-inline" role="form" action="{{ path("ride_find") }}">
            <div class="form-group">
                <div class="input-group">
                   {# <div class="input-group-addon"><img src="{{ asset("bundles/nxtcarmain/images/markergreen.jpg") }}" width="18px" height="px"></div>
                   #} <input class="form-control from" type="text" placeholder="From">
                </div>
            </div>
            <div class="form-group">
                <div class="input-group">
                  {#  <div class="input-group-addon"><img src="{{ asset("bundles/nxtcarmain/images/markerred.png") }}" width="11px" height="17px"></div>
                   #} <input class="form-control to" type="text" placeholder="To">
                </div>
            </div>
            <button type="submit" class="btn btn-default">Saerch</button>
        </form>
        {#<small><small>#}<a class="header-small-text">Discover our most popular car share departures: London, Manchester, Nottingham...</a> {#</small></small>#}
    </div>
{% endblock %}

{% block content %}


    <div class="row homepage-features">
        <div class="col-xs-6 col-md-4 text-center vertica-lLine">
            <a href="#" class="content-header">Watch How it Works</a>
            <div class="video-tutorial">
                <div class="home-video-play"></div>
            </div>
        </div>
        <div class="col-xs-6 col-md-4 text-center vertica-lLine">
            <p class="content-header">Best Travel Prices</p>
        </div>
        <div class="col-xs-6 col-md-4 text-center ">
            <a href="#" class="content-header">Download the App</a>
            <img src={{ asset("/bundles/nxtcarmain/images/bloc-mobileapp.png") }}>
        </div>
    </div>


    <div class="row homepage-explanations">
        <div class="col-xs-6 col-md-4">
            <p>	Drivers:</p>
            <p>	Easily cut your motoring costs</p>

            <h6>Stop travelling alone! Save money by taking passengers on your long car journeys.</h6>
        </div>
        <div class="col-xs-6 col-md-4">
            <p>Passengers:</p>
            <p>Travel across the UK for less</p>
            <h6>Easily book your seat and travel from city A to city B for much less, even at the last minute!</h6>
        </div>
        <div class="col-xs-6 col-md-4">
            <p>Ridesharing with confidence:</p>
            <p>Trust and safety</p>
            <h6>Verified profiles with member ratings create a trustworthy community.</h6>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script type="text/javascript" src="{{ asset("/bundles/nxtcarmain/js/require/mainRunner.js") }}"></script>
{% endblock %}