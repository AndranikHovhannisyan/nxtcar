<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8"/>
    <title>
    {% block title %}
        Easy car sharing with BlaBlaCar, the UK's leading low cost travel community | BlaBlaCar.com!
    {% endblock %}
    </title>
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset("app/bower_components/bootstrap/dist/css/bootstrap.min.css") }}">
        <link rel="stylesheet" href="{{ asset("app/bower_components/angular-motion/dist/angular-motion.min.css") }}">
        <link rel="stylesheet" href="{{ asset("bundles/nxtcarmain/css/main.css") }}">
    {% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
</head>
<body {% block AngularController %}{% endblock %}>
    <!-- stsrt header -->
    <header class='header'>
        {% block topHeader %}
            <div class="bla">
                <a href="{{ path('homepage') }}">
                    <div class="bla-img"></div></a>
                <a href="{{ path('ride_find') }}" class="bla-btn bla-btn-1  btn btn-warning btn-lg" role="button">Find a ride</a>
                <span>or</span>
                <a href="{{ path('ride_offer') }}" class="bla-btn  btn btn-success btn-lg" role="button">Offer a ride</a>
                <div class="header-menu">
                    {% if not is_granted('ROLE_USER') %}
                        <ul class="list-inline">
                            <li>
                                <a href="{{ path("fos_user_registration_register") }}">Sign up
                                    <span class='header-vertica-lLine'></span>
                                </a>
                            </li>
                            <li>
                                <a href="{{ path("fos_user_security_login") }}">Log in
                                    <span class='header-vertica-lLine'></span>
                                </a>
                            </li>
                            <li>
                                <a href="{{ path('category') }}">FAQ
                                    <span class='header-vertica-lLine'></span>
                                </a>
                            </li>
                            <li>
                                <span>
                                    <img ng-src="[[ choosenCountry.icon ]]"/>
                                    <span class="currency"></span>
                                </span>
                                <a href="javascript:void(0)"
                                   data-template="/bundles/nxtcarmain/htmls/countries.html"
                                   data-animation="am-flip-x"
                                   data-placement="bottom"
                                   bs-popover><i class="caret"></i>
                                </a>
                            </li>
                            <li><f-like></f-like></li>
                        </ul>
                    {% else %}
                        <ul class="list-inline">
                            <li class="messages">
                                <a href="{{ path("messages",{'status': 'received'}) }}">
                                    <span class='header-vertica-lLine'></span>
                                </a>
                            </li>
                            {#<li class="notifications">#}
                                {#<span>1</span>#}
                                {#<a href="#">#}
                                    {#<span class='header-vertica-lLine'></span>#}
                                {#</a>#}
                            {#</li>#}
                            <li>
                                <a href="javascript:void(0)"
                                   data-template="/bundles/nxtcaruser/htmls/userDropDown.html"
                                   data-animation="am-flip-x"
                                   data-placement="bottom"
                                   bs-popover>
                                    {% set photo = asset('bundles/nxtcaruser/images/user-default.png') %}
                                    <img src="{{ photo }}" width="18" height="18"/>
                                    {{ app.user.firstname }}
                                    <i class="caret"></i>
                                    <span class='header-vertica-lLine'></span>
                                </a>
                            </li>
                            <li>
                                <span>
                                    <img ng-src="[[ choosenCountry.icon ]]"/>
                                    <span currency="choosenCountry.currency"></span>
                                </span>
                                <a href="javascript:void(0)"
                                   data-template="/bundles/nxtcarmain/htmls/countries.html"
                                   data-animation="am-flip-x"
                                   data-placement="bottom"
                                   bs-popover><i class="caret"></i>
                                </a>
                            </li>
                        </ul>
                    {% endif %}
                </div>
            </div>
        {% endblock %}
        {% block bottomHeader %}{% endblock %}
    </header>
    <!-- end  header -->
    <div class="content" ng-init="basePath = '{{ app.debug ? 'app_dev.php':'app.php' }}'">{% block content %}{% endblock %}</div>

